<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/bevietnampro_medium</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

    </style>

    <style name="CustomTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="materialCalendarFullscreenTheme">
            @style/CustomThemeOverlay_MaterialCalendar_Fullscreen
        </item>
    </style>

    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
    </style>

    <style name="Custom_MaterialCalendar.Fullscreen" parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/bevietnampro_medium</item>
        <item name="android:fontFamily">@font/bevietnampro_medium</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/bevietnampro_medium</item>
        <item name="android:fontFamily">@font/bevietnampro_medium</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/bevietnampro_medium</item>
        <item name="android:fontFamily">@font/bevietnampro_medium</item>
    </style>

    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Background_Edt" >
        <item name="android:textColorHint" > @color/color_hint </item>
        <item name="android:textSize"> @dimen/sp12 </item>
        <item name="android:background"> @drawable/bg_text_input </item>
        <item name="android:padding">@dimen/sp10 </item>
        <item name="android:drawablePadding" > @dimen/dp10 </item>

    </style>

    <style name="Background_Btn" >
        <item name="android:textAllCaps" > false </item>
        <item name="android:textColor"> @color/colorWhite </item>
        <item name="android:textSize"> @dimen/sp14 </item>
        <item name="android:padding">@dimen/sp10 </item>
        <item name="android:drawablePadding" > @dimen/dp10 </item>
        <item name="android:background" >@drawable/bg_btn_login</item>
    </style>

    <style name="Circle_Image" >
        <item name="cornerSize">50%</item>
    </style>

    <style name="Circle_Image_Product" >
        <item name="cornerSize">50%</item>
        <item name="strokeColor" >@color/colorBlack</item>
        <item name="strokeWidth">@dimen/dp1</item>
    </style>

</resources>
